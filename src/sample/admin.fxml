<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AdminController">
   <left>
      <AnchorPane prefHeight="400.0" prefWidth="150.0" BorderPane.alignment="CENTER">
         <TitledPane fx:id="search" expanded="false" layoutY="107.0" prefHeight="93.0" prefWidth="150.0" text="Search">
            <GridPane vgap="10">
               <Button fx:id="registration" mnemonicParsing="false" onAction="#paneButtonPressed" text="by reg. number" />
               <Button fx:id="manufacturer" mnemonicParsing="false" onAction="#paneButtonPressed" text="by manufacturer" GridPane.rowIndex="1" />
               <TextField fx:id="textField1" prefHeight="25.0" prefWidth="124.0" visible="false" GridPane.rowIndex="2" />
               <TextField fx:id="textField2" prefHeight="25.0" prefWidth="124.0" visible="false" GridPane.rowIndex="3" />
               <Button fx:id="enter" mnemonicParsing="false" onAction="#enterRevertPressed" text="Enter" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
               <Button fx:id="revert" mnemonicParsing="false" onAction="#enterRevertPressed" text="Revert" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
            </GridPane>
         </TitledPane>
         <Button fx:id="add" layoutX="47.0" layoutY="52.0" mnemonicParsing="false" text="Add car" />
         <Button layoutX="48.0" layoutY="14.0" mnemonicParsing="false" text="Refresh" onAction="#refreshPressed"/>
      </AnchorPane>
   </left>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <ListView fx:id="carList" prefHeight="400.0" prefWidth="215.0" />
         <TextArea fx:id="carDetails" editable="false" layoutX="215.0" layoutY="200.0" prefHeight="200.0" prefWidth="255.0" />
         <ImageView fx:id="carImg" fitHeight="200.0" fitWidth="253.0" layoutX="215.0" pickOnBounds="true" preserveRatio="true" />
      </AnchorPane>
   </center>
</BorderPane>
